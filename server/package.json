{
  "name": "pulseflow-server",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "npx kill-port 65432 && nodemon server.js",
    "start": "node server.js",
    "build": "npm install && mkdir -p client && cp -r ../client/* ./client/ 2>/dev/null || true",
    "postinstall": "mkdir -p client && cp -r ../client/* ./client/ 2>/dev/null || true",
    "verify-speech": "node scripts/verificarGoogleSpeech.js"
  },
  "dependencies": {
    "@google-cloud/speech": "^7.2.1",
    "@google/generative-ai": "^0.24.1",
    "@sendgrid/mail": "^8.1.6",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.0.4",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^6.10.1",
    "twilio": "^5.5.2"
  },
  "devDependencies": {
    "kill-port": "^2.0.1",
    "nodemon": "^3.1.10"
  }
}
